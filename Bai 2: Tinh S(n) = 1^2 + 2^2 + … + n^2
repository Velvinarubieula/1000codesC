/* Bai 2: Tinh S(n) = 1^2 + 2^2 + … + n^2 */

#include <stdio.h>
#include <conio.h>
int main(){
	int i, n;
	long sum = 0;
	i = 1;
	printf("Moi ban nhap n = ");
	scanf("%d", &n);
	while (i < n){
		sum += sum + i*i;
		i++;
	}
	printf("i = %d", i);
	printf("Tong S(n) = 1^2 + 2^2 + 3^2 + ・.. + %d^2 = %ld", i, sum);
}
